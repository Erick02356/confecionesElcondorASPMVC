@model confecionesElcondorMVC.Models.Area

@{
    ViewData["Title"] = "Create";
}
<h1 class="text-center mb-4">Crear Área</h1>

<div class="card shadow-sm mt-4">
    <div class="card-body">
        <h4 class="card-title text-secondary">Detalles del Área</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>
            <div class="row">
                <div class="col-md-12">
                    <div class="mb-3">
                        <label asp-for="NombreArea" class="form-label fw-bold">Nombre del Área</label>
                        <input asp-for="NombreArea" class="form-control" placeholder="Ingrese el nombre del área" />
                        <span asp-validation-for="NombreArea" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-end mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary me-2">Volver</a>
                <button type="submit" class="btn btn-primary">Crear Área</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
