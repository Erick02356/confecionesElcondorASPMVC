@model confecionesElcondorMVC.Models.Area

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <h1 class="text-center text-danger mb-4">Eliminar Área de Trabajo</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title text-center mb-3">¿Estás seguro de que deseas eliminar esta área?</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.NombreArea)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.NombreArea)
                </dd>
            </dl>

            <div class="d-flex justify-content-between">
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" asp-for="IdArea" />
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>

                <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
            </div>
        </div>
    </div>
</div>