@model confecionesElcondorMVC.Models.Area

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Detalles del Área de Trabajo</h1>

    <div class="card shadow-sm mx-auto" style="max-width: 500px;">
        <div class="card-body">
            <h4 class="card-title text-secondary">Información del Área</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4 fw-bold">
                    Nombre del Área:
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.NombreArea)
                </dd>
            </dl>

            <div class="d-flex justify-content-end mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.IdArea" class="btn btn-warning me-2">Editar</a>
                <a asp-action="Index" class="btn btn-outline-secondary">Volver a la Lista</a>
            </div>
        </div>
    </div>
</div>
