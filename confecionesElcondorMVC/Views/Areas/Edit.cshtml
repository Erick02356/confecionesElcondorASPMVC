@model confecionesElcondorMVC.Models.Area

@{
    ViewData["Title"] = "Edit";
}
<div class="container my-5">
    <h1 class="text-primary text-center">Editar Área de Trabajo</h1>
    <p class="text-center text-muted">Modifica los detalles del área de trabajo a continuación.</p>

    <div class="card shadow mt-4">
        <div class="card-body">
            <h4 class="card-title text-secondary">Formulario de Edición</h4>
            <hr />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>
                <input type="hidden" asp-for="IdArea" />

                <div class="row">
                    <div class="col-md-12">
                        <div class="mb-3">
                            <label asp-for="NombreArea" class="form-label fw-bold">Nombre del Área</label>
                            <input asp-for="NombreArea" class="form-control" placeholder="Ingrese el nombre del área" />
                            <span asp-validation-for="NombreArea" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">Cancelar</a>
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
