@model confecionesElcondorMVC.Models.Empleado

@{
    ViewData["Title"] = "Edit";
}
<div class="container mt-5">
    <h1 class="text-center mb-4">Editar Empleado</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title text-center mb-3">Formulario de Edición</h4>
                    <hr />

                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <input type="hidden" asp-for="IdEmpleado" />

                        <div class="mb-3">
                            <label asp-for="IdTipoDocumento" class="form-label">Seleccione un tipo de documento</label>
                            <select asp-for="IdTipoDocumento" class="form-select" asp-items="ViewBag.IdTipoDocumento"></select>
                            <span asp-validation-for="IdTipoDocumento" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NumeroDocumento" class="form-label">Número de documento</label>
                            <input asp-for="NumeroDocumento" class="form-control" />
                            <span asp-validation-for="NumeroDocumento" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PrimerNombre" class="form-label">Primer nombre</label>
                            <input asp-for="PrimerNombre" class="form-control" />
                            <span asp-validation-for="PrimerNombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SegundoNombre" class="form-label">Segundo nombre (opcional)</label>
                            <input asp-for="SegundoNombre" class="form-control" />
                            <span asp-validation-for="SegundoNombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PrimerApellido" class="form-label">Primer apellido</label>
                            <input asp-for="PrimerApellido" class="form-control" />
                            <span asp-validation-for="PrimerApellido" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SegundoApellido" class="form-label">Segundo apellido</label>
                            <input asp-for="SegundoApellido" class="form-control" />
                            <span asp-validation-for="SegundoApellido" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FechaNacimiento" class="form-label">Fecha de nacimiento</label>
                            <input type="date" asp-for="FechaNacimiento" class="form-control" />
                            <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdArea" class="form-label">Área de trabajo</label>
                            <select asp-for="IdArea" class="form-select" asp-items="ViewBag.IdArea"></select>
                            <span asp-validation-for="IdArea" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-3 text-center">
                <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
